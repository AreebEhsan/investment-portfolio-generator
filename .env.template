# Copy this file to .env and fill in your API keys (all free tiers)

# Finnhub API Configuration (Free tier: 60 calls/minute)
FINNHUB_API_KEY=your_free_finnhub_api_key_here

# Alpha Vantage API Configuration (Free tier: 25 calls/day)
ALPHA_VANTAGE_API_KEY=your_free_alpha_vantage_api_key_here

# NewsAPI Configuration (Free tier: 100 requests/day)
NEWS_API_KEY=your_free_news_api_key_here

# Application Settings
APP_DEBUG=False
CACHE_TTL_SECONDS=600  # 10 minutes cache to respect rate limits
UPDATE_INTERVAL_SECONDS=60  # 1 minute updates for free tiers
DEFAULT_PORTFOLIO_SIZE=10000

# Risk-free rate (annual percentage, e.g., 10-year Treasury rate)
RISK_FREE_RATE=0.04

# Data Provider Settings (yfinance is completely free, others are free tier)
PRIMARY_DATA_PROVIDER=yfinance  # Completely free, no API key needed
SECONDARY_DATA_PROVIDER=finnhub  # Free tier backup

# Rate Limiting (respect free tier limits)
FINNHUB_CALLS_PER_MINUTE=50  # Leave buffer for 60/min limit
ALPHA_VANTAGE_CALLS_PER_DAY=20  # Leave buffer for 25/day limit
NEWS_API_CALLS_PER_DAY=90  # Leave buffer for 100/day limit

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=True